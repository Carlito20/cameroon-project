---
/**
 * Clean Language Toggle (EN | FR)
 *
 * Uses Google Translate but with custom styled buttons
 * instead of the ugly default dropdown.
 */
---

<!-- Clean Language Toggle -->
<div class="lang-toggle">
  <button class="lang-btn active" data-lang="en" title="English">EN</button>
  <span class="lang-divider">|</span>
  <button class="lang-btn" data-lang="fr" title="FranÃ§ais">FR</button>
</div>

<!-- Hidden Google Translate Element -->
<div id="google_translate_element" style="display: none;"></div>

<script is:inline>
  // Track if Google Translate is ready
  let googleTranslateReady = false;
  let pendingLanguage = null;

  // Initialize Google Translate (hidden)
  function googleTranslateElementInit() {
    new google.translate.TranslateElement({
      pageLanguage: 'en',
      includedLanguages: 'en,fr',
      autoDisplay: false
    }, 'google_translate_element');

    // Wait for combo box to appear, then mark as ready
    const checkReady = setInterval(() => {
      const select = document.querySelector('.goog-te-combo');
      if (select) {
        clearInterval(checkReady);
        googleTranslateReady = true;
        // If there's a pending language change, execute it now
        if (pendingLanguage) {
          doLanguageChange(pendingLanguage);
          pendingLanguage = null;
        }
      }
    }, 100);
  }

  // Handle language button clicks
  document.addEventListener('DOMContentLoaded', function() {
    const langBtns = document.querySelectorAll('.lang-btn');
    const langToggle = document.querySelector('.lang-toggle');

    langBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const lang = this.getAttribute('data-lang');

        // Immediate visual feedback - switch active state instantly
        langBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');

        // Add loading indicator
        langToggle.classList.add('loading');

        // Trigger Google Translate
        changeLanguage(lang);
      });
    });

    // Check current language on load
    checkCurrentLanguage();
  });

  // Function to change language
  function changeLanguage(lang) {
    if (googleTranslateReady) {
      doLanguageChange(lang);
    } else {
      // Store pending language and wait for Google Translate
      pendingLanguage = lang;
    }
  }

  // Actually perform the language change
  function doLanguageChange(lang) {
    const select = document.querySelector('.goog-te-combo');
    const langToggle = document.querySelector('.lang-toggle');

    if (select) {
      select.value = lang;
      select.dispatchEvent(new Event('change'));

      // Remove loading state after a short delay
      setTimeout(() => {
        if (langToggle) langToggle.classList.remove('loading');
      }, 300);
    } else {
      if (langToggle) langToggle.classList.remove('loading');
    }
  }

  // Check current language on page load
  function checkCurrentLanguage() {
    const langCookie = document.cookie.match(/googtrans=\/en\/(\w+)/);
    if (langCookie && langCookie[1] === 'fr') {
      const frBtn = document.querySelector('.lang-btn[data-lang="fr"]');
      const enBtn = document.querySelector('.lang-btn[data-lang="en"]');
      if (frBtn && enBtn) {
        enBtn.classList.remove('active');
        frBtn.classList.add('active');
      }
    }
  }
</script>

<script is:inline src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

<style>
  .lang-toggle {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    background: #f8f9fa;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    border: 1px solid #e0e0e0;
    position: relative;
    transition: opacity 0.2s ease;
  }

  .lang-btn {
    background: none;
    border: none;
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: #999;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .lang-btn:hover {
    color: #3498db;
  }

  .lang-btn.active {
    background: #3498db;
    color: white;
  }

  .lang-btn:active {
    transform: scale(0.95);
  }

  /* Loading state */
  .lang-toggle.loading {
    opacity: 0.7;
    pointer-events: none;
  }

  .lang-toggle.loading::after {
    content: '';
    position: absolute;
    right: -20px;
    top: 50%;
    transform: translateY(-50%);
    width: 12px;
    height: 12px;
    border: 2px solid #3498db;
    border-top-color: transparent;
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
  }

  @keyframes spin {
    to { transform: translateY(-50%) rotate(360deg); }
  }

  .lang-divider {
    color: #ddd;
    font-size: 0.75rem;
  }

  /* Hide ALL Google Translate UI elements */
  :global(.goog-te-banner-frame),
  :global(.skiptranslate),
  :global(.goog-te-gadget-icon),
  :global(#goog-gt-tt),
  :global(.goog-te-balloon-frame),
  :global(.goog-te-menu-frame),
  :global(.goog-te-menu2),
  :global(#google_translate_element),
  :global(.goog-te-spinner-pos),
  :global(.goog-tooltip),
  :global(.goog-tooltip:hover),
  :global(.goog-text-highlight) {
    display: none !important;
    visibility: hidden !important;
  }

  :global(body) {
    top: 0 !important;
    position: static !important;
  }

  :global(html.translated-ltr),
  :global(html.translated-rtl) {
    margin-top: 0 !important;
  }

  :global(.goog-text-highlight) {
    background: none !important;
    box-shadow: none !important;
  }

  /* Hide the iframe that Google injects */
  :global(iframe.goog-te-banner-frame),
  :global(iframe.skiptranslate) {
    display: none !important;
    height: 0 !important;
    width: 0 !important;
    border: none !important;
  }
</style>
